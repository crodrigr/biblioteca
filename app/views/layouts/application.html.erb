<!DOCTYPE html>
<html>
  <head>
    <title>Biblioteca</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to welcome_index_path, :class=> "navbar-brand" do %>
    <%= image_tag "logo-01.png", style: "height:50px;width:50px;" %>
  <% end %> 
  
  
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item active">
         <%= link_to 'Administrador', books_path, :class=> "nav-link" %>  
      </li>
      <li class="nav-item active">
         <%= link_to 'Prestamo', books_indexPrestamo_path, :class=> "nav-link" %>  
      </li>
      <li class="nav-item active">
        <% if current_user %>
         <%= link_to 'Salir', destroy_user_session_path, method: :delete, :class=> "nav-link" %>
        <% else %>
        <%= link_to 'Login', new_user_session_path, :class=> "nav-link"%>
        <% end %>
      </li>
      <% if current_user!=nil %>
      <span class="navbar-text">
      <%=current_user.email%>
      </span>
      <% end %>
    </ul>
  </div>
</nav>
<% if notice!=nil %> 
 <div class="alert alert-primary" role="alert">
 <%= notice %>
 </div>
 <%end%>
 <% if alert!=nil %>  
 <div class="alert alert-danger" role="alert">
 <%= alert %>
</div>
<%end%>
  <div class="container pt-3">  
    <%= yield %>
  </div>
  </body>
</html>
